{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "target": "es2021",
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/__test__/*",
    "**/__mocks__/*"
  ]
}
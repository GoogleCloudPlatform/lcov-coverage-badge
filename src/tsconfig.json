{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": false
  },
  "exclude": [
    "../node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "./*.ts"
  ]
}